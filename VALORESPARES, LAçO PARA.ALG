Algoritmo "valoresPares, laço para"

Var
     contador, valor: inteiro
Inicio
     escreval("Digite um valor: ")
     leia(valor)
     se(valor%2=1) entao
        valor <- valor - 1
     fimse
     para contador <- valor ate 0 passo -2 faca
         escreval(contador)
         
     fimpara



Fimalgoritmo