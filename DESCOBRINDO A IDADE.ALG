Algoritmo "descobrindo a idade"
Var
  ano_atual, ano_nascimento, idade: inteiro

Inicio
     escreval("digite o ano atual:")
     leia(ano_atual)
     escreval("digite o ano que você nasceu")
     leia(ano_nascimento)

     idade <- ano_atual - ano_nascimento

     escreval("sua idade é ", idade)

Fimalgoritmo